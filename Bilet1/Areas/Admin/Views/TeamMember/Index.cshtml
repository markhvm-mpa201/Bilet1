@model List<TeamMemberGetVM>

<div class="card shadow-sm my-3 w-100">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Team Members</h5>
        <a asp-action="Create" class="btn btn-success btn-sm">+ Create member</a>
    </div>

    <div class="card-body p-0 table-responsive">
        <table class="table table-hover table-striped mb-0 align-middle w-100">
            <thead class="table-dark">
                <tr>
                    <th style="width: 60px;">Id</th>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Description</th>
                    <th style="width: 100px;">Image</th>
                    <th style="width: 180px;" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teamMember in Model)
                {
                    <tr>
                        <td>@teamMember.Id</td>
                        <td>@teamMember.Name</td>
                        <td>@teamMember.MemberPositionName</td>
                        <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                            @teamMember.Description
                        </td>
                        <td>
                            <img src="~/img/@teamMember.ImagePath" class="img-fluid rounded" style="max-height: 60px;" />
                        </td>
                        <td class="text-center">
                            <a asp-action="Update" asp-route-id="@teamMember.Id" class="btn btn-warning btn-sm me-1">Update</a>
                            <a asp-action="Delete" asp-route-id="@teamMember.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this member?');">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
