@model List<TeamMemberGetVM>
<div class="container">
    <div class="row">
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-success">Create</a>
        </div>
    </div>
    <div class="row">

        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Position</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teamMember in Model)
                {
                    <tr>
                        <th scope="row">@teamMember.Id</th>
                        <td>@teamMember.Name</td>
                        <td>@teamMember.MemberPositionName</td>
                        <td>@teamMember.Description</td>
                        <td>
                            <img src="~/img/@teamMember.ImagePath" />
                        </td>
                        <td>
                            <a asp-action="Update" asp-route-id="@teamMember.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-route-id="@teamMember.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }               
            </tbody>
        </table>

    </div>
</div>