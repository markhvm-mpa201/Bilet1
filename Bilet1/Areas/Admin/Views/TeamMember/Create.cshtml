@model TeamMemberCreateVM
<div class="container" style="color:white">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input class="form-control" asp-for="Name" placeholder="Enter name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input class="form-control" asp-for="Description" placeholder="Enter description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Image">Image</label>
                <input class="form-control" asp-for="Image" placeholder="Enter image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="MemberPositionId" class="form-control" asp-items="@ViewBag.MemberPositions">
                </select>
                <span asp-validation-for="MemberPositionId"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}